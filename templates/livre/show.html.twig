{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Date_de_parution</th>
                <td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre_de_pages</th>
                <td>{{ livre.nombreDePages }}</td>
            </tr>
            <tr>
                <th>Nombre_d'emprunts</th>
                <td>{{ livre.nombreEmprunts }}</td>
            </tr>
        </tbody>
    </table>

    {% if not livre.isDeleted %}
        <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>

        {{ include('livre/_delete_form.html.twig') }}
    {% else %}
    <p>Ce livre a été supprimé</p>
    {% endif %}
    <br>
    <a href="{{ path('app_livre_index') }}">back to list</a>
{% endblock %}
